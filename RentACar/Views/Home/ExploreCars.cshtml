@model VoziloPretragaViewModel

@{
    ViewData["Title"] = "Explore Cars";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Rent-a-Car</title>
    <link rel="stylesheet" href="~/css/Styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 1rem 0;
            position: relative;
        }

        .admin-buttons {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

            .admin-buttons a {
                margin-left: 1rem;
                background-color: #ff5722;
                color: #fff;
                padding: 0.5rem 1rem;
                text-decoration: none;
                font-weight: bold;
                border-radius: 5px;
            }

                .admin-buttons a:hover {
                    background-color: #e64a19;
                }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .search-filters {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding: 2rem 0;
        }

            .search-filters input,
            .search-filters select,
            .search-filters button {
                padding: 0.5rem;
                font-size: 1rem;
            }

            .search-filters button {
                background-color: #ff5722;
                color: #fff;
                border: none;
                cursor: pointer;
                font-weight: bold;
            }

        .cars-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .car-card {
            background: #f7f7f7;
            padding: 1rem;
            border-radius: 10px;
            width: calc(33.333% - 1rem);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .car-card img {
                width: 100%;
                height: 200px; 
                object-fit: cover; 
                border-radius: 10px;
            }

            .car-card h3 {
                font-size: 1.25rem;
                margin: 0.5rem 0;
            }

            .car-card p {
                font-size: 1rem;
                color: #666;
            }

        a {
            text-decoration: none;
            color: inherit;
        }

            a:hover {
                text-decoration: underline;
            }

        .availability {
            font-weight: bold;
        }

        .available {
            color: green;
        }

        .not-available {
            color: red;
        }

        .edit-button {
            background-color: #4CAF50; 
            color: white;
            padding: 0.5rem 1rem;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .admin-actions {
            display: flex;
            gap: 1rem;
            margin-top: auto;
        }


            .edit-button:hover {
                background-color: #45a049; 
            }

        .delete-button {
            background-color: #f44336; 
            color: white;
            padding: 0.5rem 1rem;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

            .delete-button:hover {
                background-color: #d32f2f; 
            }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            @if (User.IsInRole("Administrator"))
            {
                <div class="admin-buttons">
                    <a asp-controller="Vozilo" asp-action="Create">Add Vehicle</a>
                </div>
            }
        </div>
    </header>

    <div class="container">
        <section class="search-filters">
            <form method="get" asp-action="ExploreCars">
                <input type="text" name="SearchTerm" placeholder="Search by manufacturers" value="@Model.SearchTerm" />
                <input type="number" name="MinCijena" placeholder="Min price" value="@Model.MinCijena" />
                <input type="number" name="MaxCijena" placeholder="Max price" value="@Model.MaxCijena" />
                

                <select name="Tip">
                    <option value="">All Types</option>
                    <option value=PUTNICKO>Passenger</option>
                    <option value=TRANSPORTNO>Commercial</option>
                </select>

                <select name="SortBy">
                    <option value="">Sort by</option>
                    <option value="PriceLowToHigh">Price: Low to High</option>
                    <option value="PriceHighToLow">Price: High to Low</option>
                </select>

                <button type="submit">Search</button>
            </form>
        </section>

        <section class="cars-grid">
            @foreach (var car in Model.Cars)
            {
                <a href="@Url.Action("Details", "Vozilo", new { id = car.Id })" class="car-card">
                    <img src="@car.Slika" alt="@car.Model" />
                    <h3>@car.Proizvodjac @car.Model</h3>
                    <p>
                        Type:
                        @if (car.Tip == TipVozila.GENERALNO)
                        {
                            <text>General</text>
                        }
                        else if (car.Tip == TipVozila.PUTNICKO)
                        {
                            <text>Passenger</text>
                        }
                        else if (car.Tip == TipVozila.TRANSPORTNO)
                        {
                            <text>Commercial</text>
                        }
                    </p>

                    <p>Price: $@car.Cijena</p>
                    @if (User.IsInRole("Administrator"))
                    {
                        <div>
                            <a asp-controller="Home" asp-action="EditCar" asp-route-id="@car.Id">Edit</a>
                            <form asp-controller="Home" asp-action="DeleteCar" asp-route-id="@car.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this vehicle?')">
                                <button type="submit">Delete</button>
                            </form>
                        </div>

                    }
                </a>
            }
        </section>
    </div>
</body>
</html>
