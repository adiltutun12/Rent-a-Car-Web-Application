<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rent-a-Car</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" />
    @RenderSection("Styles", required: false)
    <style>
        .text-orange {
            color: #FFA500;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg style="background-color: #f8f9fa;">
            <div class="container">
                <a class="navbar-brand style = text-orange" href="/">Home</a>
              
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @{
                            var isAuthenticated = User.Identity.IsAuthenticated;
                        }
                        @if (isAuthenticated)
                        {  
                            <a href="/Rezervacija/MojeRezervacije" class="btn btn-link text-orange">My Rents</a>
                            <li class="nav-item">
                                <a class="nav-link style=text-orange" href="/Account/MyAccount">My Account</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link style=text-orange">Log Out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Log In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="bg-light text-center py-3">
        <div class="container">
            <p>&copy; 2024 Rent-a-Car. All Rights Reserved.</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            var loginSuccess = '@TempData["LoginSuccess"]'; ž
            console.log("Login Success: " + loginSuccess); // Add this line to debug

            if (loginSuccess) {
                toastr.success(loginSuccess, 'Success', { timeOut: 5000, closeButton: true, progressBar: true });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
